<%= form_for(@friendship) do |f| %>

  <% if @friendship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@friendship.errors.count, "error") %> prohibited this friendship from being saved:</h2>

      <ul>
      <% @friendship.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-12">

    <div class="field col-sm-4">
      <div class="col-sm-2">
        <%= f.label :friend_id %>
      </div>
      <div class="col-sm-2">
        <%= f.text_field :friend_id , :list=>"email"%>
      </div>
    </div>

    <datalist id="email">
      <% (@users-[current_user]).each do |u| %>
        <option value="<%= u.email %>"><%= u.email %></option>
      <% end %>
    </datalist>

    <div class="field">
      <%= f.hidden_field :user_id , :value=>current_user.id %>
    </div>

    <div class="actions col-sm-4">
      <%= f.submit :value=>"Add" , :id=>"submit"%>
    </div>

  </div>

<% end %>

