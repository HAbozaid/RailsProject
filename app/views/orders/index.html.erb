<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>For</th>
      <th>From</th>
      <th>Menu image</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.for %></td>
        <td><%= order.from %></td>
        <td><img width="100" height="100" src="<%= order.menu_image %>" /></td>
        <td><%= order.status %></td>
        <td><%= order.user_id %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
        <td><%= link_to 'finish',order_path(order) ,method: :put %></td>
        <td><%= link_to 'Cancel', order_path(order),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

